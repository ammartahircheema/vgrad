@model VGrad_Empty.Models.BasicInformation

@{
    ViewBag.Title = "Basic Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Basic Information</h2>

@using (Html.BeginForm("EditBasicInformation", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <br/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BasicInformationID)

        <div class="form-group">
            @Html.LabelFor(model => model.FatherName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FatherName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FatherName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="row">
                    <input type="file" id="Image" name="Image" accept="image/*" class="col m6" />
                    <span id="previewSpan">
                        <b>Preview:</b><br />
                        <img id="preview" src="~/Uploads/Images/@Model.Image" alt="your image" style="max-height:300px; max-width:300px" />
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Introduction, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Introduction, new { htmlAttributes = new { @class = "materialize-textarea" } })
                @Html.ValidationMessageFor(model => model.Introduction, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default right" />
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result);
                    $("#previewSpan").show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#Image").change(function () {
            console.log("changing");
            readURL(this);
        });
    });
</script>